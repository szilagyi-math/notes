  \IfBooleanTF{#1}{%
    #2 \left(\cos{#3}^\circ + \iu\sin{#3}^\circ\right)%
  }{%
    #2 \left(\cos\left({#3}^\circ\right) + \iu\sin\left({#3}^\circ\right)\right)%
  }%
}
