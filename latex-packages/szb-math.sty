\NewDocumentCommand{\cisdeg}{s m}{%
  \IfBooleanTF{#1}{%
    \cos{#2}^\circ + \iu\sin{#2}^\circ%
  }{%
    \cos\left({#2}^\circ\right) + \iu\sin\left({#2}^\circ\right)%
  }%
}
